<?xml version="1.0" encoding="utf-8"?>
<com.hugoandrade.passwordsmanagerapp.RoundedCornerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:percentile_height="100"
    app:corner_radius="200dp"
    app:background_color="@android:color/transparent"
    app:background_color_selected="@android:color/transparent"
    app:border_color="@color/colorAccent"
    app:border_elevation="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tv_keyboard"
        android:text="1"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:background="?android:attr/selectableItemBackground"
        />

</com.hugoandrade.passwordsmanagerapp.RoundedCornerLayout>