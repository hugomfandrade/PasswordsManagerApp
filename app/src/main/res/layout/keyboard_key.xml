<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <org.hugoandrade.passwordsmanagerapp.customview.RoundedCornerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:percentile_height="100"
        app:corner_radius="200dp"
        app:background_color="@android:color/transparent"
        app:background_color_selected="@android:color/transparent"
        app:border_color="@color/colorAccent"
        app:border_elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:id="@+id/tv_keyboard"
            android:text="1"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:background="?android:attr/selectableItemBackground"
            />

    </org.hugoandrade.passwordsmanagerapp.customview.RoundedCornerLayout>
</LinearLayout>